<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

      <VBox spacing="40" alignment="TOP_CENTER" prefHeight="800.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GameOverController">
         <children>
            <Label text="Game Over" textAlignment="CENTER">
               <font>
                  <Font name="System Italic" size="48.0" />
               </font>
               <padding>
         <Insets top="200.0"></Insets>
         </padding>
            </Label>
            <Label fx:id="scorePlayerLeaderboard" text="Label">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="usernameTextField" maxWidth="-Infinity" promptText="Enter username">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="toRecordBtn" mnemonicParsing="false" prefWidth="150.0" text="To record" />
            <Button mnemonicParsing="false" onAction="#showMainMenu" prefWidth="200.00" text="Menu" />
            <Button mnemonicParsing="false" onAction="#exitGO" prefWidth="200.0" text="Exit" />
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>

