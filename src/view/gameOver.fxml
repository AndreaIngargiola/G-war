<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GameOverController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="370.0" prefWidth="500.0" spacing="40.0">
         <children>
            <Label text="Game Over">
               <font>
                  <Font name="System Italic" size="48.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Label>
            <Label fx:id="scorePlayerLeaderboard" text="Label">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="usernameTextField" maxWidth="-Infinity" promptText="Enter username">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="toRecordBtn" mnemonicParsing="false" text="To record" />
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
      <Button layoutX="338.0" layoutY="440.0" mnemonicParsing="false" onAction="#showMainMenu" text="Menu" />
      <Button layoutX="414.0" layoutY="440.0" mnemonicParsing="false" onAction="#exitGO" prefHeight="31.0" prefWidth="59.0" text="Exit" />
   </children>
</AnchorPane>
